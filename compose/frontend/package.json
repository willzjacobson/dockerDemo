{
  "name": "customerportal",
  "version": "1.0.0",
  "main": "build/server/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/server/index.js",
    "build:start": "npm run build:node && npm run build:webpack && npm start",
    "build:node": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
    "build:webpack": "webpack --mode production --env.production",
    "dev": "cross-env NODE_ENV=development concurrently --raw \"npm run server\" \"npm run client\"",
    "client": "webpack-dev-server --mode development --env.development",
    "server": "nodemon",
    "format": "npm run lint:fix && npm run prettier:fix",
    "prettier:fix": "prettier --print-width 80 --trailing-comma all --single-quote true --jsx-single-quote true --write '**/*.{ts,tsx,json}' webpack.config.js",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix",
    "tslint-prettier-check": "tslint-config-prettier-check ./tslint.json",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "echo 'placeholder used in Dockerfile: should not be able to build docker image if tests are failing or out of date'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.8",
    "@fortawesome/free-solid-svg-icons": "5.5.0",
    "@fortawesome/react-fontawesome": "0.1.3",
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/react": "16.7.2",
    "@types/react-dom": "16.0.9",
    "@types/react-fontawesome": "1.6.4",
    "@types/react-redux": "6.0.9",
    "@types/react-router-dom": "4.3.1",
    "@types/redux-immutable-state-invariant": "2.0.4",
    "@types/redux-logger": "3.0.6",
    "@types/request-promise": "^4.1.42",
    "@types/webpack-env": "1.13.6",
    "axios": "0.18.0",
    "bluebird": "^3.5.3",
    "body-parser": "1.18.3",
    "cors": "2.8.4",
    "express": "4.16.4",
    "helmet": "3.15.0",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-hot-loader": "^4.3.12",
    "react-html-parser": "^2.0.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "4.0.1",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/node": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/preset-env": "7.1.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "autoprefixer": "9.3.1",
    "babel-loader": "8.0.4",
    "babel-plugin-css-modules-transform": "1.6.1",
    "clean-webpack-plugin": "0.1.19",
    "concurrently": "4.0.1",
    "cross-env": "5.2.0",
    "css-loader": "1.0.1",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-template": "6.2.0",
    "husky": "1.1.3",
    "lint-staged": "8.0.4",
    "mini-css-extract-plugin": "0.4.4",
    "nodemon": "1.18.4",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-flexbox": "1.0.3",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-mixins": "6.2.0",
    "postcss-nested": "4.1.0",
